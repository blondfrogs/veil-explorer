# Database Configuration
POSTGRES_USER=veilexplorer
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Veil Node RPC Configuration
# Note: The Veil node must be running with RPC enabled
# Use host.docker.internal to access services on the host machine
VEIL_NODE_URL=http://host.docker.internal:5050/
VEIL_RPC_USER=veilrpc
VEIL_RPC_PASSWORD=changeme_secure_rpc_password

# Backend Configuration
BACKEND_PORT=5000

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000
SITE_URL=http://localhost:3000
BACKEND_API_URL=http://localhost:5000/api

# For production, update these to your actual domain:
# FRONTEND_URL=https://explorer.yourdomain.com
# SITE_URL=https://explorer.yourdomain.com
# BACKEND_API_URL=https://explorer.yourdomain.com/api
# Or for separate API subdomain:
# FRONTEND_URL=https://explorer.yourdomain.com
