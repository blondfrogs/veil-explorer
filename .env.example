# =============================================================================
# Veil Explorer Configuration
# =============================================================================
# Copy this file to .env and configure for your deployment
# All URLs should NOT have trailing slashes unless specified

# =============================================================================
# DEPLOYMENT ENVIRONMENT
# =============================================================================
# Options: development, staging, production
DEPLOYMENT_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=veilexplorer
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=veilexplorer

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# VEIL NODE RPC CONFIGURATION
# =============================================================================
# The Veil node must be running with RPC enabled and txindex=1
# Use host.docker.internal for Docker environments to access host machine
VEIL_NODE_URL=http://host.docker.internal:5050/
VEIL_RPC_USER=veilrpc
VEIL_RPC_PASSWORD=changeme_secure_rpc_password

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
BACKEND_PORT=5000
# Full backend API URL (used by frontend to connect)
BACKEND_API_URL=http://localhost:5000/api
# Internal API endpoint URL (used for SignalR connections, transaction exports)
INTERNAL_API_URL=http://localhost:5000/api/internal

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_PORT=3000
# Public-facing frontend URL
FRONTEND_URL=http://localhost:3000
# Site URL (used for SEO, canonical URLs, sitemaps)
SITE_URL=http://localhost:3000

# =============================================================================
# EXTERNAL LINKS CONFIGURATION
# =============================================================================
# These are links shown in the footer and other parts of the UI
VEIL_PROJECT_URL=https://veil-project.com
VEIL_STATS_URL=https://veil-stats.com
VEIL_TOOLS_URL=https://veil.tools
GITHUB_REPO_URL=https://github.com/steel97/veil-explorer

# =============================================================================
# NUXT BUILD CONFIGURATION
# =============================================================================
# These are used during build time for the Nuxt frontend
# They should match the runtime URLs above
NUXT_PUBLIC_SITE_URL=${SITE_URL}
NUXT_PUBLIC_I18N_BASE_URL=${SITE_URL}
NUXT_PUBLIC_BASE_URL=${SITE_URL}
NUXT_PUBLIC_BACKEND_API_URL=${BACKEND_API_URL}
NUXT_PUBLIC_INTERNAL_API_URL=${INTERNAL_API_URL}
NUXT_PUBLIC_VEIL_PROJECT_URL=${VEIL_PROJECT_URL}
NUXT_PUBLIC_VEIL_STATS_URL=${VEIL_STATS_URL}
NUXT_PUBLIC_VEIL_TOOLS_URL=${VEIL_TOOLS_URL}
NUXT_PUBLIC_GITHUB_REPO_URL=${GITHUB_REPO_URL}

# Chain configuration
NUXT_PUBLIC_CHAIN_DEFAULT=main
NUXT_PUBLIC_RECENT_BLOCKS_COUNT=5
NUXT_PUBLIC_BLOCKS_PER_PAGE=15
NUXT_PUBLIC_TXS_PER_PAGE=15
NUXT_PUBLIC_MAX_BLOCK_WEIGHT=4000000
NUXT_PUBLIC_SYNC_NOTICE_CASE=15
NUXT_PUBLIC_COOKIE_SAVE_DAYS=90

# =============================================================================
# EXAMPLE PRODUCTION CONFIGURATIONS
# =============================================================================

# Single Domain (API under /api path):
# FRONTEND_URL=https://explorer.yourdomain.com
# SITE_URL=https://explorer.yourdomain.com
# BACKEND_API_URL=https://explorer.yourdomain.com/api
# INTERNAL_API_URL=https://explorer.yourdomain.com/api/internal

# Separate Subdomains:
# FRONTEND_URL=https://explorer.yourdomain.com
# SITE_URL=https://explorer.yourdomain.com
# BACKEND_API_URL=https://api.yourdomain.com/api
# INTERNAL_API_URL=https://api.yourdomain.com/api/internal

# Custom Ports (Development/Private Network):
# FRONTEND_URL=http://192.168.1.100:3000
# SITE_URL=http://192.168.1.100:3000
# BACKEND_API_URL=http://192.168.1.100:5000/api
# INTERNAL_API_URL=http://192.168.1.100:5000/api/internal
